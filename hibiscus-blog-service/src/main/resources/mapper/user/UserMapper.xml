<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gold.hibiscus.blog.infrastructure.persistence.user.mapper.UserMapper">
    <resultMap id="userMap" type="gold.hibiscus.blog.domain.user.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
    </resultMap>
    <insert id="saveUser" parameterType="gold.hibiscus.blog.domain.user.User">
        INSERT INTO user(id, username, password, nickname) VALUES (#{id}, #{username},#{password}, #{nickname})
    </insert>
    <select id="queryUser" resultMap="userMap">
        SELECT id, username, nickname
        FROM user
        WHERE username = #{username} AND password = #{password} limit 1
    </select>
    <select id="queryUserByUsername" resultMap="userMap">
        SELECT id, username, nickname
        FROM user
        WHERE username = #{username} limit 1
    </select>
</mapper>